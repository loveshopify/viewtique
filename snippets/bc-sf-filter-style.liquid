{%- comment -%} BC Style Setting {%- endcomment -%}
{%- assign bc_settings = shop.metafields.bc-sf-filter.settings -%}
{%- if bc_settings contains 'style":{' -%}
  {%- assign bc_style = bc_settings | split: 'style":{' | last | split: '}' | first | split: ',' -%}
  {%- if bc_style != blank -%}
    <style data-id="bc-sf-filter-style" type="text/css">
      #bc-sf-filter-options-wrapper .bc-sf-filter-option-block .bc-sf-filter-block-title h3,
      #bc-sf-filter-tree-h .bc-sf-filter-option-block .bc-sf-filter-block-title a {
        {%- if bc_style[0] != nil and bc_style[0] != blank -%}
          {%- assign bc_title_color = bc_style[0] | split: ':' | last | replace: '"','' | replace: '||',',' | strip -%}
          {%- if bc_title_color != blank -%}
          color: {{ bc_title_color }} !important;
          {%- endif -%}
        {%- endif -%}
        {%- if bc_style[1] != nil and bc_style[1] != blank -%}
          {%- assign bc_title_font_size = bc_style[1] | split: ':' | last | replace: '"','' | strip -%}
          {%- if bc_title_font_size != blank -%}
          font-size: {{ bc_title_font_size }}px !important;
          {%- endif -%}
        {%- endif -%}
        {%- if bc_style[2] != nil and bc_style[2] != blank -%}
        {%- assign bc_title_font_weight = bc_style[2] | split: ':' | last | replace: '"','' | strip -%}
          {%- if bc_title_font_weight != blank -%}
          font-weight: {{ bc_title_font_weight }} !important;
          {%- endif -%}
        {%- endif -%}
        {%- if bc_style[3] != nil and bc_style[3] != blank -%}
          {%- assign bc_title_text_transform = bc_style[3] | split: ':' | last | replace: '"','' | strip -%}
          {%- if bc_title_text_transform != blank -%}
          text-transform: {{ bc_title_text_transform }} !important;
          {%- endif -%}
        {%- endif -%}
        {%- if bc_style[4] != nil and bc_style[4] != blank -%}
          {%- assign bc_title_font_family = bc_style[4] | split: ':' | last | replace: '"','' | strip -%}
          {%- if bc_title_font_family != blank -%}
          font-family: "{{ bc_title_font_family }}" !important;
          {%- endif -%}
        {%- endif -%}
      }
      #bc-sf-filter-options-wrapper .bc-sf-filter-option-block .bc-sf-filter-block-content ul li a,
      #bc-sf-filter-tree-h .bc-sf-filter-option-block .bc-sf-filter-block-content ul li a {
        {%- if bc_style[5] != nil and bc_style[5] != blank -%}
          {%- assign bc_content_color = bc_style[5] | split: ':' | last | replace: '"','' | replace: '||',',' | strip -%}
          {%- if bc_content_color != blank -%}
          color: {{ bc_content_color }} !important;
          {%- endif -%}
        {%- endif -%}
        {%- if bc_style[6] != nil and bc_style[6] != blank -%}
          {%- assign bc_content_font_size = bc_style[6] | split: ':' | last | replace: '"','' | strip -%}
          {%- if bc_content_font_size != blank -%}
          font-size: {{ bc_content_font_size }}px !important;
          {%- endif -%}
        {%- endif -%}
        {%- if bc_style[7] != nil and bc_style[7] != blank -%}
          {%- assign bc_content_font_family = bc_style[7] | split: ':' | last | replace: '"','' | strip -%}
          {%- if bc_content_font_family != blank -%}
          font-family: "{{ bc_content_font_family }}" !important;
          {%- endif -%}
        {%- endif -%}
      }
      #bc-sf-filter-tree-mobile button {
        {%- if bc_style[8] != nil and bc_style[8] != blank -%}
          {%- assign bc_mobilebtn_color = bc_style[8] | split: ':' | last | replace: '"','' | replace: '||',',' | strip -%}
          {%- if bc_mobilebtn_color != blank -%}
          color: {{ bc_mobilebtn_color }} !important;
          {%- endif -%}
        {%- endif -%}
        {%- if bc_style[9] != nil and bc_style[9] != blank -%}
          {%- assign bc_mobilebtn_font_size = bc_style[9] | split: ':' | last | replace: '"','' | strip -%}
          {%- if bc_mobilebtn_font_size != blank -%}
          font-size: {{ bc_mobilebtn_font_size }}px !important;
          {%- endif -%}
        {%- endif -%}
        {%- if bc_style[10] != nil and bc_style[10] != blank -%}
          {%- assign bc_mobilebtn_font_weight = bc_style[10] | split: ':' | last | replace: '"','' | strip -%}
          {%- if bc_mobilebtn_font_weight != blank -%}
          font-weight: {{ bc_mobilebtn_font_weight }} !important;
          {%- endif -%}
        {%- endif -%}
        {%- if bc_style[11] != nil and bc_style[11] != blank -%}
          {%- assign bc_mobilebtn_text_transform = bc_style[11] | split: ':' | last | replace: '"','' | strip -%}
          {%- if bc_mobilebtn_text_transform != blank -%}
          text-transform: {{ bc_mobilebtn_text_transform }} !important;
          {%- endif -%}
        {%- endif -%}
        {%- if bc_style[12] != nil and bc_style[12] != blank -%}
          {%- assign bc_mobilebtn_font_family = bc_style[12] | split: ':' | last | replace: '"','' | strip -%}
          {%- if bc_mobilebtn_font_family != blank -%}
          font-family: "{{ bc_mobilebtn_font_family }}" !important;
          {%- endif -%}
        {%- endif -%}
        {%- if bc_style[13] != nil and bc_style[13] != blank -%}
          {%- assign bc_mobilebtn_bkg = bc_style[13] | split: ':' | last | replace: '"','' | replace: '||',',' | strip -%}
          {%- if bc_mobilebtn_bkg != blank -%}
          background: {{ bc_mobilebtn_bkg }} !important;
          {%- endif -%}
        {%- endif -%}
      }
    </style>
  {%- endif -%}
{%- endif -%}
{%- comment -%} BC Lib CSS {%- endcomment -%}
